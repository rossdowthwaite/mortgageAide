<h1>Listing Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.title %> <%= client.fname %> <%= client.mname %> <%= client.lname %>
        <td><%= client.role.role %></td>
        <td>
          <%= link_to 'Show', client %>
          <%= link_to 'Edit', edit_contact_path(client) %>
          <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
