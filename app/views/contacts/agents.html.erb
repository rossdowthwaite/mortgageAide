<h1>Listing Agents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.title %> <%= agent.fname %> <%= agent.mname %> <%= agent.lname %>
        <td><%= agent.role.role %></td>
        <td>
          <%= link_to 'Show', agent %>
          <%= link_to 'Edit', edit_contact_path(agent) %>
          <%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>
