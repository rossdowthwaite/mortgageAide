<p id="notice"><%= notice %></p>

<h1>Listing Application Statuses</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Application case</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @application_statuses.each do |application_status| %>
      <tr>
        <td><%= application_status.id %></td>
        <td><%= application_status.application_case %></td>
        <td><%= application_status.status %></td>
        <td><%= link_to 'Show', application_status %></td>
        <td><%= link_to 'Edit', edit_application_status_path(application_status) %></td>
        <td><%= link_to 'Destroy', application_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

